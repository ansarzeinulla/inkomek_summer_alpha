<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".register_inclusive">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="Page"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/irLogin"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:ems="10"
                android:drawableLeft="@drawable/ic_baseline_person_outline_24"
                android:drawablePadding="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="25dp"
                android:textStyle="bold"
                android:hint="login"
                android:inputType="text" />

            <EditText
                android:id="@+id/irName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:ems="10"
                android:hint="name"
                android:inputType="text|textPassword"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/irInitial"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:ems="10"
                android:hint="initials"
                android:inputType="text" />

            <EditText
                android:id="@+id/irPhone"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:ems="10"
                android:hint="teleph"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="25dp"
                android:textStyle="bold"
                android:inputType="text" />

            <EditText
                android:id="@+id/irEmail"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="25dp"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:drawablePadding="20dp"

                android:textStyle="bold"
                android:layout_height="48dp"
                android:ems="10"
                android:hint="email"
                android:inputType="text" />

            <EditText
                android:id="@+id/irPassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:ems="10"
                android:hint="password"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="25dp"
                android:textStyle="bold"
                android:inputType="text" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/irDetailLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="25dp"
                android:textStyle="bold">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="detail"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="25dp"
                    android:textStyle="bold" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/irBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:backgroundTint="@color/design_default_color_secondary"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>